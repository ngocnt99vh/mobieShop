<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".detailactivity"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:layout_width="392dp"
    android:layout_height="280dp">
    <ImageView
        android:id="@+id/image_item"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</android.support.v7.widget.CardView>
    <TextView
        android:textColor="#000000"
        android:text="Brand of Item"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/brand_item"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000000"
        android:text="Name of Item"
        android:layout_marginLeft="10dp"
        android:id="@+id/title_item"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="#048fc6"
        android:text="Rs :"
        android:layout_marginLeft="10dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#048fc6"
        android:text="Rs"
        android:layout_marginLeft="8dp"
        android:id="@+id/price_item"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />
   <Button
       android:layout_width="wrap_content"
       android:layout_height="40dp"
       android:id="@+id/view_seller_profile"
       android:layout_marginLeft="80dp"
       android:text="Seller Profile"

       />
</LinearLayout>
    <TextView
        android:visibility="gone"
        android:textColor="#000000"
        android:text="Location of Item"
        android:layout_marginLeft="10dp"
        android:id="@+id/location_item"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#000000"
        android:text="Posted Time"
        android:layout_marginLeft="10dp"
        android:id="@+id/posted_time_item"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    <TextView
        android:textColor="#000000"
        android:text="Item bought by seller in Rs : "
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold"
        android:textColor="#036c03"
        android:text="45"
        android:id="@+id/original_price"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
  </LinearLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:text="Description mentioed by Seller :"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textSize="15dp"
        android:text="There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form, by injected humour, or randomised words which don't look even slightly believable. If you are going to use a passage of Lorem Ipsum, you need to be sure there isn't anything embarrassing hidden in the middle of text."
        android:id="@+id/description_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    </ScrollView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:menu="@menu/bottom_nevigation_item">
    </android.support.design.widget.BottomNavigationView>
    </RelativeLayout>

</LinearLayout>