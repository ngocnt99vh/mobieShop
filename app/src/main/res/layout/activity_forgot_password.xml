<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        app:cardCornerRadius="0dp"
        android:elevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:tint="#ffffff"
                    android:src="@drawable/ic_cached_black_24dp"
                    android:background="@drawable/circle"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Reset your password"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/rectangle"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/linearLayout1"
                android:rotation="45"
                android:layout_marginTop="-10dp"/>


            <RelativeLayout
                android:id="@+id/relativeLayoutVarifiedEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView2"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                >

                <ImageView
                    android:id="@+id/imageViewEmailIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#838988"
                    android:padding="8dp"
                    android:tint="@color/white"
                    android:src="@drawable/ic_email_black_24dp"/>
                <EditText

                    android:id="@+id/emailVeryfied"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/imageViewEmailIcon"
                    android:background="@color/editTextBackground"
                    android:layout_toRightOf="@+id/imageViewEmailIcon"
                    android:hint="Email"
                    android:textSize="17dp"
                    android:paddingLeft="20dp"
                    />


            </RelativeLayout>

            <Button
                android:id="@+id/idSendResetLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayoutVarifiedEmail"
                android:text="Send Reset Link"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/button_material"
                android:fontFamily="sans-serif-condensed"
                android:onClick="passwordReset"/>

            <TextView
                android:id="@+id/idGoTOSignInPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back to SignIn"
                android:textColor="#083ee2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="15dp"
                android:textStyle="normal"
                android:layout_below="@id/idSendResetLink"
                android:textAlignment="center"
                android:onClick="goOnLogInPage"
                />








        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>